<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentRegisterActivity"
    android:background="@color/colorTeamHub">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logo">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/teamhub_logo_transparent"
            android:layout_gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:id="@+id/form">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="2"
            android:padding="30dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFont"
                android:id="@+id/textId"/>
            <EditText
                android:inputType="textPassword"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFont"
                android:id="@+id/textPassword"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFont"
                android:id="@+id/textName"/>
            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="전화번호"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFont"
                android:lines="1"
                android:singleLine="true"
                android:id="@+id/textPhone"/>
            <Spinner
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textDept">
            </Spinner>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="10dp"
                android:text="중복 확인"
                android:textColor="#ffffffff"
                android:background="@color/colorTeamHubDark"
                android:textColorHint="@color/colorFont"
                android:id="@+id/btnValidate"
                android:layout_marginLeft="20dp"/>

        </GridLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form">
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:text="가입 하기"
            android:textColor="#ffffffff"
            android:background="@color/colorTeamHubDark"
            android:id="@+id/btnRegister"/>
    </RelativeLayout>
</RelativeLayout>